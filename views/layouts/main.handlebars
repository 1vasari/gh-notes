<html lang="en">
  <head>
    <title>{{config.siteName}}</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/purecss@1.0.1/build/pure-min.css"
      integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47"
      crossorigin="anonymous"
    >
    <link rel="stylesheet" href="/static/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div id="layout">
      <!-- Menu toggle -->
      <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
      </a>

      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="#">{{config.siteName}}</a>

          <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="/" class="pure-menu-link menu-item-divided">Home</a></li>
            {{#each files}}
              <li class="pure-menu-item">
                <a href="/{{@this}}" class="pure-menu-link">
                  {{formatNoteTitle @this}}
                </a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>

      <div id="main">
        {{#if pageTitle}}
          <div class="header">
            <h1>{{pageTitle}}</h1>
            {{#if pageSubtitle}}<h2>{{pageSubtitle}}</h2>{{/if}}
          </div>
        {{/if}}
        <div class="content">
          {{{body}}}
        </div>
      </div>
    </div>

    <script type="text/javascript" src="/static/ui.js"></script>
  </body>
</html>
